@{
  Layout = "_Layout";
}

@model PierreBakery.Models.Flavor

<h2>Add a Treat</h2>

<h4>Add a Treat that uses this flavor: @Html.DisplayFor(model => model.Type)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Flavors", "Index")</p>