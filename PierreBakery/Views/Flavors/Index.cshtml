@{
    Layout = "_Layout";
}

@using PierreBakery.Models;
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.Rendering;
@model List<PierreBakery.Models.Flavor>;

<h3>List of current Flavors:</h3>
<br>
@if (@Model.Count == 0)
{
    <h3>Sorry for the inconvinience but there are no Flavors currently availible.</h3>
}
else
{
    <p>We currently have @Model.Count flavor(s).</p>
}
@foreach(Flavor flavor in Model)
{
    <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
}

@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Add new Flavor", "Create")</p>
}
<button onclick="window.history.back()"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span> Back</button>